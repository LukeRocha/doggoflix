---
import heroTitle from "../assets/hero-title.png";
---

<section
  id="hero"
  class="relative h-[80vh] w-full bg-[url('../assets/hero-bg.png')] bg-cover bg-center text-white"
>
  <!-- Overlay escuro para legibilidade -->
  <div class="absolute inset-0 bg-gradient-to-t from-[#141414] via-[#141414]/60 to-transparent"></div>

  <!-- Conteúdo -->
  <div
    class="relative z-10 flex h-full w-full max-w-[1100px] items-end px-6 pb-12 md:pb-16 lg:pb-20"
  >
    <div
      class="flex flex-col justify-end w-full max-w-[720px] md:pl-[70px] lg:pl-[90px]"
    >
      <!-- Logo / título visual -->
      <img
        src={heroTitle.src}
        alt="Hero Title"
        class="w-[200px] md:w-[360px] drop-shadow-xl"
      />

      <!-- Descrição curta -->
      <p
        class="mt-4 text-base leading-snug text-gray-200 md:text-lg lg:text-xl"
      >
        A breathtaking thriller series following a brilliant detective uncovering
        secrets that should have stayed buried.
      </p>

      <!-- Botões -->
      <div class="mt-6 flex flex-wrap items-center gap-3">
        <a href="#">
          <button
            class="flex items-center gap-2 rounded-md bg-white px-6 py-2 font-semibold text-black transition hover:bg-gray-200"
          >
            ▶ Play
          </button>
        </a>

        <a href="#">
          <button
            class="flex items-center gap-2 rounded-md bg-[rgba(109,109,110,0.7)] px-6 py-2 font-semibold text-white transition hover:bg-[rgba(109,109,110,0.4)]"
          >
            ⓘ More Info
          </button>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsividade refinada */
  @media (max-width: 768px) {
    #hero {
      background-position: center top;
      height: 70vh;
    }
  }

  @media (min-width: 1024px) {
    #hero {
      height: 90vh;
    }
  }
</style>
