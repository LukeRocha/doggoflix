---
interface Props {
  id: string;
  title: string;
  img: ImageMetadata | string;
  alt: string;
  href?: string;
  rating?: number;
}
const { title, img, alt, href, rating } = Astro.props as Props;

const src = typeof img === 'string' ? img : img.src;
---

<a href={href ?? '#'} class="group inline-block min-w-[160px]">
  <div class="aspect-[2/3] w-[160px] overflow-hidden rounded-xl bg-black/30">
    <img src={src} alt={alt} loading="lazy" class="h-full w-full object-cover transition group-hover:scale-105" />
  </div>
  <div class="mt-2 text-sm text-white/90">
    <span class="block font-semibold">{title}</span>
    {rating ? <span class="text-white/60">‚≠ê {rating}</span> : null}
  </div>
</a>
