  { id: "m4",  title: "Dark Alley",  img: img4,  alt: "Dark Alley poster",  href: "/movies/dark-alley",  rating: 7.9 },
  { id: "m5",  title: "Quantum 9",   img: img5,  alt: "Quantum 9 poster",   href: "/movies/quantum-9",   rating: 8.1 },
  { id: "m6",  title: "Cold Steel",  img: img6,  alt: "Cold Steel poster",  href: "/movies/cold-steel",  rating: 7.8 },
  { id: "m7",  title: "Red Orbit",   img: img7,  alt: "Red Orbit poster",   href: "/movies/red-orbit",   rating: 8.0 },
  { id: "m8",  title: "Solar Rush",  img: img8,  alt: "Solar Rush poster",  href: "/movies/solar-rush",  rating: 7.7 },
  { id: "m9",  title: "Night Run",   img: img9,  alt: "Night Run poster",   href: "/movies/night-run",   rating: 7.9 },
